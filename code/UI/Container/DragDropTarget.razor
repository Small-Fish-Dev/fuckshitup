@namespace FUCKSHIT.UI
@inherits Panel

<root />

@code {
	public static DragDropTarget Current { get; private set; }

	public bool DropHovered => Current == this && DragItemPanel.Instance is not null;

	protected override void OnMouseOver( MousePanelEvent e )
	{
		base.OnMouseOver( e );

		Current = this;
	}

	protected override void OnMouseOut(MousePanelEvent e)
	{
		base.OnMouseOut( e );

		if ( Current == this )
			Current = null;
	}

	public override void OnDeleted()
	{
		base.OnDeleted();

		if ( Current == this )
			Current = null;
	}

	public virtual void OnDropped( Item item, bool rotated, object source )
	{

	}
}
